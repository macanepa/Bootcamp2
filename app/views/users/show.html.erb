<p id="notice"><%= notice %></p>

<p>
  Rut:<%= @user.rut %> <br> Password:<%= @user.password %><br>  Balance:<%= @user.balance %>
</p>

<div class="table-container col-8 mx-auto">
  <div class="h1 text-center text-primary mx-auto">Transaction List</div>
  <table class="table">
  <thead>
  <tr>
    <th>User</th>
    <th>Amount</th>
    <th>Action</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.user.rut %></td>
      <td><%= transaction.amount %></td>
      <td><%= transaction.action %></td>
      <td><%= link_to 'Show', transaction %></td>
      <td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
      <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  <tr>
    <td>TOTAL AMOUNT:</td>
    <td><%= @total_transaction_amount %></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
  </tr>
  </tbody>
</table>
</div>

<%= link_to 'Edit', edit_user_path(@user, format:"html") %> |
<%= link_to 'Back', users_path(format:"html") %>
