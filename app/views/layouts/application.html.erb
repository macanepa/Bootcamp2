<!DOCTYPE html>
<html>
  <head>
    <title>Bootcamp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <style>
      body{
        background-color: #333333;

      }

      h1, h2, h3, h4, h5{
        font-family: "Helvetica Neue", Helvetica, Arial, Sans-Serif;
      }
    </style>

  </head>

  <body>

      <nav class="navbar navbar-dark bg-dark" style="box-shadow: 0px 5px rgb(0,0,0,0.5);">
        <div class="form-inline">
        <a class="navbar-brand text-warning" href="<%=root_path %>">BOOTCAMP</a>
        <a style="text-decoration: none;" class="medium ml-5 mr-4 nav-item text-warning" href="<%=users_path(format:"html") %>">USERS</a>
        <a style="text-decoration: none;" class="medium mr-4 nav-item text-warning" href="<%=transactions_path(format:"html") %>">TRANSACTIONS</a>
        </div>
        <p class="navbar-text">
          <% if admin_signed_in? %>
            Logged in as <strong><%= current_admin.email %></strong>.
            <%= link_to 'Edit profile', edit_admin_registration_path, :class => 'navbar-link' %> |
            <%= link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link'  %>
          <% else %>
<!--            <%#= link_to "Sign up", new_admin_registration_path, :class => 'navbar-link'  %> |-->
            <%#= link_to "Login", new_admin_session_path, :class => 'navbar-link'  %>
          <% end %>
        </p>
      </nav>


    <%= yield %>
  </body>
</html>
