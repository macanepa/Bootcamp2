<p id="notice"><%= notice %></p>

<div class="h3 text-warning text-center mt-5">Transactions</div>


<div class="table-container col-8 mx-auto">

  <!--  <div class="h2 text-warning mx-auto">USERS</div>-->
  <table class="table table-dark table-striped mt-1" style="background-color: #42484e; border-radius: 1vw;">
    <thead>
    <tr>
      <th>USER</th>
      <th>AMOUNT</th>
      <th>ACTION</th>
      <th>CREATION DATE</th>
      <th colspan="3"></th>
    </tr>
    </thead>



    <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><a class="text-warning" href="<%= user_path(transaction.user, format:"html") %>"><%=transaction.user.rut %></a></td>
        <td

          <% if transaction.amount < 0 %>
          class="h5 text-danger"
          <% elsif transaction.amount > 0 %>
          class="h5 text-success"
          <% else %>
          class="h5"
          <% end %>

          >$ <%= transaction.amount %></td>
        <td ><%= transaction.action %></td>
        <td ><%= transaction.created_at %></td>
        <td><a href="<%=transaction_path(transaction, format:"html") %>" class="text-warning">Show Details</a></td>
        <td><a href="<%=edit_transaction_path(transaction, format:"html") %>" class="text-warning">Edit Transaction</a></td>
        <!--        <td><a class="text-warning"><%#= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></a></td>-->
      </tr>
    <% end %>
    </tbody>




  </table>
  <% if not current_admin.nil? %>
    <a class="btn btn-warning text-center mx-auto" style="float: right;" href="<%= new_user_path(format:"html") %>">Create User</a>
  <% end %>
  <!--  <div style="float: right;"><%#= link_to 'New User', new_user_path %></div>-->
</div>